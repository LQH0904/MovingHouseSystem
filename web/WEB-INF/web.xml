<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee                               https://jakarta.ee/xml/ns/jakartaee/web-app_4_0.xsd">
    <!-- User List -->
    <servlet>
        <servlet-name>UserListServlet</servlet-name>
        <servlet-class>controller.UserListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OperationProcedureServlet</servlet-name>
        <servlet-class>controller.OperationProcedureServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OperationPolicyServlet</servlet-name>
        <servlet-class>controller.OperationPolicyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FeeConfigurationServlet</servlet-name>
        <servlet-class>controller.FeeConfigurationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserListServlet</servlet-name>
        <url-pattern>/UserListServlet</url-pattern>
    </servlet-mapping>
    <!-- Customer List -->
    <servlet>
        <servlet-name>CustomerListServlet</servlet-name>
        <servlet-class>controller.CustomerListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerListServlet</servlet-name>
        <url-pattern>/CustomerListServlet</url-pattern>
    </servlet-mapping>
    <!-- Add User (dùng cho cả Staff và Operator) -->
    <servlet>
        <servlet-name>AddUserServlet</servlet-name>
        <servlet-class>controller.AddUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddUserServlet</servlet-name>
        <url-pattern>/Operator/AddUserServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddUserServlet</servlet-name>
        <url-pattern>/Staff/AddUserServlet</url-pattern>
    </servlet-mapping>
    <!-- Delete User -->
    <servlet>
        <servlet-name>DeleteUserServlet</servlet-name>
        <servlet-class>controller.DeleteUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteUserServlet</servlet-name>
        <url-pattern>/Operator/DeleteUserServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OperationProcedureServlet</servlet-name>
        <url-pattern>/OperationProcedureServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OperationPolicyServlet</servlet-name>
        <url-pattern>/OperationPolicyServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FeeConfigurationServlet</servlet-name>
        <url-pattern>/FeeConfigurationServlet</url-pattern>
    </servlet-mapping>
</web-app>
