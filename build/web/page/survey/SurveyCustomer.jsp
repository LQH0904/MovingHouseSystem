                    const result = await response.json();

                    if (result.success) {
                        alert('C·∫≠p nh·∫≠t th√†nh c√¥ng!');
                        reloadSelectOptions(fileName, options);
                        closeModal(modal);
                    } else {
                        alert('L·ªói: ' + result.message);
